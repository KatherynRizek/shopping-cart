<h2>Shopping Cart</h2>

<% if @order_items.count > 0 %>
  <% @order_items.each do |item| %>
    <%= form_for item do |f| %>
      <%= f.number_field :quantity %>
      <%= f.submit %>
      <%= link_to "Delete", order_item_path(item), :data => {:confirm => "You sure?", :method => "delete"} %>
    <% end %>
    <p> Unit Price: <%= number_to_currency item.product.price %> | Quantity: <%= item.quantity %> | Total Price: <%= number_to_currency (item.product.price * item.quantity) %></font></p>
    <%= image_tag(item.product.image, size: "175x175", alt: item.product.name)%>
    <% end %>
  <h4><font size="+1">Your Total: <%= number_to_currency current_order.calc_total %></h4>
  </p>
<% else %>
  <h2>Your shopping cart is empty</h2>
<% end %>

<%= link_to '<button type="button">Add More Products</button>'.html_safe, :controller => 'products', :action => 'index' %>



            